{
  "name": "crud-api",
  "version": "1.0.0",
  "description": "Simple crud api",
  "main": "src/index.js",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "test": "jest",
    "start:dev": "nodemon",
    "start:prod": "npm run build && node --env-file=.env dist/worker.js",
    "start:multi": "npm run build && node --env-file=.env dist/loadBalancer.js",
    "build": "webpack --config webpack.config.ts"
  },
  "jest": {
    "moduleFileExtensions": ["ts", "js", "json"],
    "preset": "ts-jest",
    "setupFiles": ["<rootDir>/e2e-tests/testEnvVars.ts"],
    "testEnvironment": "node",
    "testMatch": ["**/*.spec.ts"],
    "transform": {
      "^.+\\.ts$": [
        "ts-jest",
        {
          "esModuleInterop": true
        }
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/HellraiserCW/node-simple-crud-api.git"
  },
  "author": "Kostiantyn Sakharov",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/HellraiserCW/node-simple-crud-api/issues"
  },
  "homepage": "https://github.com/HellraiserCW/node-simple-crud-api#readme",
  "dependencies": {
    "dotenv": "^16.4.2",
    "uuid": "^9.0.1",
    "webpack": "^5.90.1",
    "webpack-cli": "^5.1.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.17",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.56.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "nodemon": "^3.0.3",
    "prettier": "^3.2.5",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
